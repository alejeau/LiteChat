<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.excilys.android.formation.chatlite">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!-- <uses-permission android:name="android.permission.READ_SMS" /> -->

    <receiver
        android:name=".SMSReceiver"
        class="com.excilys.android.formation.chatlite.SMSReceiver">
        <intent-filter android:priority="100">
            <action android:name="android.provider.Telephony.Sms.Intents.SMS_RECEIVED_ACTION" />
        </intent-filter>
    </receiver>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ParlezVousActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".tasks.ParlezVousTask" />
        <activity
            android:name=".NavActivity"
            android:label="@string/title_activity_nav"
            android:parentActivityName=".ParlezVousActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.excilys.android.formation.chatlite.ParlezVousActivity" />
        </activity>
        <activity
            android:name=".SendMessageActivity"
            android:label="@string/title_activity_send_message"
            android:parentActivityName=".NavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.excilys.android.formation.chatlite.NavActivity" />
        </activity>
        <activity
            android:name=".ViewMessagesActivity"
            android:label="@string/title_activity_view_messages"
            android:parentActivityName=".NavActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.excilys.android.formation.chatlite.NavActivity" />
        </activity>
    </application>

</manifest>
